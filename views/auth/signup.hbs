                            <div class="col-sm-12">
                                <input type="tel" name="telefono" id="telefono" class="form-control mb-2" placeholder="Telefono" required>
                            </div>
                            <div class="col-sm-12">
                                <input type="text" name="username" id="username" class="form-control mb-2" placeholder="Nombre de usuario (ej: lisa57)" required>
